<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Edit Text -->
    <style name="edittext">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginRight">@dimen/margin_left_right</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_right</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- Search button -->
    <style name="search_button">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/margin_search_button</item>
        <item name="android:background">@drawable/search_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Title of book -->
    <style name="title">
        <item name="android:padding">@dimen/paddingLeft</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <!-- Author and publisher of book -->
    <style name="author_publisher">
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:textColor">@color/author</item>
        <item name="android:textSize">@dimen/textSizeRest</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Number of pages of book -->
    <style name="pages">
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:textColor">@color/author</item>
        <item name="android:textSize">@dimen/textSizeRest</item>
        <item name="android:paddingBottom">@dimen/paddingLeft</item>
    </style>

</resources>
